# IoT Platform Environment Configuration
# Copy this file to .env and modify the values as needed

# Database Configuration
POSTGRES_DB=iot_platform
POSTGRES_USER=iot_user
POSTGRES_PASSWORD=change_this_password_in_production
DATABASE_URL=postgresql://iot_user:change_this_password_in_production@postgres:5432/iot_platform

# InfluxDB Configuration
INFLUXDB_ADMIN_TOKEN=change_this_token_in_production
INFLUXDB_ORG=iot_org
INFLUXDB_BUCKET=iot_data
INFLUXDB_URL=http://influxdb:8086

# Redis Configuration
REDIS_URL=redis://redis:6379

# MQTT Configuration
MQTT_BROKER_HOST=mosquitto
MQTT_BROKER_PORT=1883

# Application Configuration
SECRET_KEY=change_this_secret_key_in_production
FLASK_ENV=production
DEBUG=false

# Security Configuration
JWT_SECRET_KEY=change_this_jwt_secret_in_production
JWT_ACCESS_TOKEN_EXPIRES=3600

# Grafana Configuration
GF_SECURITY_ADMIN_PASSWORD=change_this_grafana_password

# Network Configuration
NGINX_PORT=80
BACKEND_PORT=5000
FRONTEND_PORT=3001
GRAFANA_PORT=3000

# MongoDB Configuration (Optional)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=change_this_mongo_password
MONGO_INITDB_DATABASE=iot_platform

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/iot_platform.log

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# External API Keys (if needed)
WEATHER_API_KEY=your_weather_api_key
NOTIFICATION_SERVICE_KEY=your_notification_key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

